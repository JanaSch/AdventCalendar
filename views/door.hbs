
<div id="headTitle">
    <h1 class="text-center"><b>{{title}}</b></h1>
    <h3 class="text-center">Im Jahr 2017</h3>
</div>
<br />

<div class="panel panel-default">
    <div class="row">
        <div style="text-align: center">
            <h3>{{O_ID}}. Türchen</h3>
        </div>
    </div>
    <div class="panel-body">
        <div class="row col-sm-offset-2 col-sm-8"><h4>{{Titel}}</h4></div>
        <div class="row col-sm-offset-2 col-sm-8">{{Frage}}</div>

        <div class="row col-sm-offset-2 col-sm-8" style="text-align: center">
            <a href="/"></br>Bereits vorhandene Antworten</a>
        </div>
        <div class="row col-sm-offset-2 col-sm-8"></br>
            <form action="/doors/{{O_ID}}" method="post">
                <div class="form-group row">
                    <div class="input">
                        <label for="author" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-8">
                            <input type="text" name="author" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="input">
                        <label for="answer" class="col-sm-2 col-form-label">Antwort</label>
                        <div class="col-sm-8">
                            <input type="text" name="answer" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <!--<div>
                            <label for="id">Türchen</label>
                            <input type="int" name="id">{{doornumber}}
                        </div>-->
                    <button class="btn btn-default active center-block" type="submit">Speichern</button>
                </div>
            </form>
        </div>

        <div class="row col-sm-offset-2 col-sm-8" style="text-align: center">
            <a href="/"></br>Richtige Lösung</a></div>
        <div class="row col-sm-offset-2 col-sm-8"></br>{{Antwort}}</div>

    </div>

</div>

